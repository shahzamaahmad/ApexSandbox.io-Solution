public String changeTimeFormat(String strTime) {
    List<String> myList = new List<String>();
    myList.addAll(strTime.split(':'));
    Integer hour =Integer.valueOf(myList[0]);
    Integer minute =Integer.valueOf(myList[1]);
    if(hour>12 && hour==00){
        return String.valueOf(hour) +':'+ String.valueOf(minute)+' '+'PM';
    }

    return strTime +' '+'AM';
}
